<%-include('../Partials/head', {title: 'Product Add'})%> 

<body>
    <%-include('../Partials/header')%>

    <h2 class="apt">Agregar un nuevo producto</h2>

    <div class="create_product">
        <form id="createForm" class="formproduct" action="/productCreate" method="POST" enctype="multipart/form-data">

            <div class="info_producto">
                    <label class="label_producto" for="nombre">Nombre de Producto</label><br>
                    <input id="nomInput" class="info_box" type="text" name="nombre" placeholder="Ej: Comida para perros"><br><br>
                    <% if(locals.errors && errors.nombre){%>
                        <p style="color:red ;"><%= errors.nombre.msg %></p> <br>
                         <% }%>

                    <label class="label_producto" for="precio">Precio de Producto</label><br>
                    <input id="precioInput" class="info_box" type="number" name="precio" placeholder="Ej: 200"><br><br>
                    <% if(locals.errors && errors.precio){%>
                        <p style="color:red ;"><%= errors.precio.msg %></p> <br>
                         <% }%>

                    <label class="label_producto" for="descripcion">Descripcion de Producto</label><br>
                    <textarea id="descInput" class="info_box" name="descripcion" rows="5" cols="33" placeholder="DescripciÃ³n"></textarea><br><br>
                    <% if(locals.errors && errors.descripcion){%>
                        <p style="color:red ;"><%= errors.descripcion.msg %></p> <br>
                         <% }%>

                    <label class="label_producto" for="categoria">Categoria</label><br>
                    <select id="categoria" name="categoria">
                        <option value="1">Alimento Canino</option>
                        <option value="2">Alimento Felino</option>
                        <option value="3">Otros</option>
                      </select><br><br>
                        <% if(locals.errors && errors.categoria){%>
                        <p style="color:red ;"><%= errors.categoria.msg %></p> <br>
                         <% }%>

                    <label class="label_producto" for="fecha_creacion">Fecha Creacion</label><br>
                    <input id="fechaInput" type="date" name="fecha_creacion" placeholder="20/12/2022"></textarea><br><br>
                    <% if(locals.errors && errors.fecha_creacion){%>
                        <p style="color:red ;"><%= errors.fecha_creacion.msg %></p> <br>
                         <% }%>
            </div>

            <div class="info_img">
                <div class="form-input">
                    <!-- Preview box-->
                    <div class="preview">
                        <img src="" alt="" id="image-preview">
                    </div>
                    <!--Input box-->
                    <label for="image">Cargar Imagen</label>
                    <input type="file" id="image" name="image" accept="image/*" onchange="showPreview(event);">

                    <% if(locals.errors && errors.image){%>
                        <p style="color:red ;"><%= errors.image.msg %></p> <br>
                         <% }%>
                </div>

            </div>

            <!-- Javascript-->
            <script type="text/javascript">
            function showPreview(event){
                if(event.target.files.length > 0){
                  var src = URL.createObjectURL(event.target.files[0]);
                  var preview = document.getElementById("image-preview");
                  preview.src = src;
                  preview.style.display = "block";
                }
              }
            </script>

            <input type="submit" value="Agregar Producto" class="submitProduct"><br>
        </form>
        <script src="/js/productCreateVal.js"></script>
    </div>
    <%-include('../Partials/footer')%>

</body>
</html>