<%-include('../Partials/head', {title: 'Login'})%> 

<body>
    <%-include('../Partials/header')%>
    <div class="form">

		<div class="SignUp_form">
            <img src="/img/logo.png" class="logo-myaccount">
            <h2 class="title-login text-center">Sign Up</h2>
			<br>
            
            <form id="regForm" method="POST" action="/register" enctype="multipart/form-data">

                <label for="nombreUsuario"></label><br>
                <input id="nomInput" type="text" placeholder="Nombre" name="nombreUsuario" value="<%= locals.oldData ? locals.oldData.nombreUsuario : null %>"><br>
                <% if(locals.errors && errors.nombreUsuario){%>
                    <p style="color:red ;"><%= errors.nombreUsuario.msg %></p> <br>
                     <% }%>

                     <label for="apellidoUsuario"></label><br>
                <input id="apeInput" type="text" placeholder="Apellido" name="apellidoUsuario" value="<%= locals.oldData ? locals.oldData.apellidoUsuario : null %>"><br>
                <% if(locals.errors && errors.apellidoUsuario){%>
                    <p style="color:red ;"><%= errors.apellidoUsuario.msg %></p> <br>
                     <% }%>

                <label for="emailUsuario"></label><br>
                <input id="emailInput" type="email" placeholder="E-Mail" name="emailUsuario" value="<%= locals.oldData ? locals.oldData.emailUsuario : null %>"><br>
                <% if(locals.errors && errors.emailUsuario){%>
                    <p style="color:red ;"><%= errors.emailUsuario.msg %></p> <br>
                     <% }%>

                     <label for="localUsuario">Local</label><br>
                    <select id="localUsuario" name="localUsuario">
                        <option value="1">Pilar</option>
                        <option value="2">Otros</option>
                      </select><br><br>
                      <% if(locals.errors && errors.localUsuario){%>
                        <p style="color:red ;"><%= errors.localUsuario.msg %></p> <br>
                         <% }%>

                <label for="passwordUsuario"></label>
                <input id="passInput" type="password" placeholder="ContraseÃ±a" name="passwordUsuario" value="<%= locals.oldData ? locals.oldData.passwordUsuario : null %>"><br>
                <% if(locals.errors && errors.passwordUsuario){%>
                    <p style="color:red ;"><%= errors.passwordUsuario.msg %></p> <br>
                     <% }%>

                <label for="imageProfile">Cargar Imagen de Perfil</label><br>
                <input id="imgInput" type="file" name="imageProfile">
                <% if(locals.errors && errors.imageProfile){%>
                    <p style="color:red ;"><%= errors.imageProfile.msg %></p> <br>
                     <% }%>

                <input type="submit" value="Registrarse" class="submit"><br>
            </form>
            <script src="/js/registerVal.js"></script>
		</div>

	</div>



</body>
</html>